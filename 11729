public static void hanoi(int n, int start, int mid, int to) {

        if (n == 1) {
            sb.append(start + " " + to + "\n");
            return;
        }
		

        hanoi(n - 1, start, to, mid);
		
 
        sb.append(start + " " + to + "\n");
		

        hanoi(n - 1, mid, start, to);
    }

